{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Current File",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "env": {
        "APP_ENV": "local",
        "DISABLE_ACCESS_LOGS": "true",
        "TS_NODE_COMPILER_OPTIONS":"{\"module\":\"commonjs\"}",
        "PORT":"3000",
        "LOG_LEVEL":"debug",
        "DB_NAME":"meye_test",
        "DB_HOST":"localhost",
        "DB_PORT":"5432",
        "DB_USER":"meye",
        "DB_PASSWORD":"meyeSecret"
      },
      "args": [
        "--exit",
        "--timeout",
        "999999",
        "--colors",
        "${file}",
        "ts-node/register"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha All",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "env": {
        "APP_ENV": "local",
        "DISABLE_ACCESS_LOGS": "true",
        "TS_NODE_COMPILER_OPTIONS":"{\"module\":\"commonjs\"}",
        "PORT":"3000",
        "LOG_LEVEL":"debug",
        "DB_NAME":"meye_test",
        "DB_HOST":"localhost",
        "DB_PORT":"5432",
        "DB_USER":"meye",
        "DB_PASSWORD":"meyeSecret"
      },
      "args": [
          "-r",
          "ts-node/register",
          "--timeout",
          "999999",
          "--colors",
          "${workspaceFolder}/tests/**/*test.ts",
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "protocol": "inspector"
  },
  ]
}
