{
  "version": "0.2.0",
  "configurations": [
  
    {
      "type": "node",
      "request": "attach",
      "name": "Debug dev",
      "processId": "${command:PickProcess}",
      "restart": true,
      "protocol": "inspector",
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha All",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "env": {
        "APP_ENV": "local",
        "DISABLE_ACCESS_LOGS": "true"
      },
      "args": [
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/tests/**/*Test.js",
        "--exit"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Current File",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "env": {
        "APP_ENV": "local",
        "DISABLE_ACCESS_LOGS": "true"
      },
      "args": [
        "--timeout",
        "999999",
        "--colors",
        "${file}",
        "--exit"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Test consumer",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "env": {
        "APP_ENV": "local",
        "DISABLE_ACCESS_LOGS": "true"
      },
      "args": [
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/tests/contract/consumer/**/*Test.js",
        "--exit"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
  ]
}
